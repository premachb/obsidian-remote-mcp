{
  "name": "obsidian-s3-mcp",
  "version": "0.1.0",
  "description": "MCP server for accessing Obsidian vault via S3",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "deploy": "npm run build && cd infra && cdk deploy",
    "synth": "cd infra && cdk synth",
    "diff": "cd infra && cdk diff"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/client-secrets-manager": "^3.700.0",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.3",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.0.0",
    "aws-cdk": "^2.175.0",
    "aws-cdk-lib": "^2.175.0",
    "constructs": "^10.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
